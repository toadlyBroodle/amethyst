{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Android Process",
            "type": "android",
            "request": "attach",
            "packageName": "com.vitorpamplona.amethyst.debug",
            "processId": "${command:PickAndroidProcess}",
            "env": {
                "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64"
            }
        },
        {
            "name": "Debug Amethyst on Device",
            "type": "java",
            "request": "attach",
            "hostName": "localhost",
            "port": 8700,
            "sourcePaths": [
                "${workspaceFolder}/amethyst/src/main/java",
                "${workspaceFolder}/quartz/src/main/java"
            ],
            "preLaunchTask": "Setup Android Debug",
            "env": {
                "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64"
            }
        },
        {
            "name": "Install and Debug Amethyst",
            "type": "java",
            "request": "attach",
            "hostName": "localhost",
            "port": 8700,
            "sourcePaths": [
                "${workspaceFolder}/amethyst/src/main/java",
                "${workspaceFolder}/quartz/src/main/java"
            ],
            "preLaunchTask": "Install and Debug Amethyst",
            "env": {
                "JAVA_HOME": "/usr/lib/jvm/java-17-openjdk-amd64"
            }
        }
    ]
} 